<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Clinic" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SubTitleStyle">
        <item name="android:fontFamily">@font/josefinsans_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.Clinic.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Clinic.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="Theme.Clinic.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>